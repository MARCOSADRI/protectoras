{% extends 'base.html.twig' %}

{% block title %}Animales{% endblock %}

{% block body %}
    <h1>{{ animale.nombreA }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animale.id }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ animale.sexo }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ animale.edad }}</td>
            </tr>
            {# <tr>
                <th>Nombre:</th>
                <td>{{ animale.nombreA }}</td>
            </tr> #}
            <tr>
                <th>Foto</th>
                 <td>
                    <img id="imgCabecera" src="../../img/{{ animale.foto }}" />
                </td>
            </tr>
        </tbody>
    </table>

   {% if is_granted('ROLE_ADMIN')  %}
        <button  class="btn btn-outline-warning">
            <a href="{{ path('animales_listado') }}">Regresar Listado</a>   
        </button> 
        <button  class="btn btn-outline-dark">
            <a href="{{ path('animales_edit', {'id': animale.id}) }}">Editar</a>
        </button>
        {{ include('animales/_delete_form.html.twig') }}
    {% else %}
        <button  class="btn btn-outline-warning">
            <a href="{{ path('animales_disponibles') }}">Regresar Listado</a>   
        </button> 
        <button class='btn-info'>ADOPTAR</button>
    {% endif %} 

    
{% endblock %}
